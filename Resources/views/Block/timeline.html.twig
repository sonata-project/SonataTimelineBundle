{% extends sonata_block.templates.block_base %}

{% block block %}
    {% if settings.title %}
        <h3>{{ settings.title }}</h3>
    {% endif %}

    <ul>
        {% for entry in entries %}
            {% set subject = entry.getComponent('subject') %}
            {% set target = entry.getComponent('target') %}

            <li>
                {{ sonata_timeline_generate_link(subject) }} => {{ entry.verb }} =>

                {{ sonata_timeline_generate_link(target) }}
            </li>

        {% else %}
            No action for now ...
        {% endfor %}
    </ul>
{% endblock %}
